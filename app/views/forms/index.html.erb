<h1>Lista de respuestas</h1>

<%= link_to 'Descargar lista en formato CSV', forms_path(format: :csv), :class => 'btn btn-primary', :role => 'button'  %>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Ciudad</th>
      <th>País</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.nombre %></td>
        <td><%= form.apellido %></td>
        <td><%= form.email %></td>
        <td><%= form.ciudad %></td>
        <td><%= form.pais %></td>
        <td><%= link_to 'Mostrar', form %></td>
        <td><%= link_to 'Editar', edit_form_path(form) %></td>
        <td><%= link_to 'Borrar', form, method: :delete, data: { confirm: '¿De verdad quieres hacer esto?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nueva encuesta', new_form_path,  :class => 'btn btn-default', :role => 'button' %>
